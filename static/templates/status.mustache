  <div id="d{{hash}}" class="media"{{^status.maxPlayers}} style="display: none"{{/status.maxPlayers}}>
    <span class="pull-left">
      <img src="/icons/{{hash}}.png" class="media-object" />
    </span>
    <div class="media-body">
      <h5 class="media-heading">
        <span class="motd">
          <span class="mccolor">{{status.motd}}</span>
        </span>
        <button type="button" class="btn btn-default btn-sm showplayers" title="上線玩家">
          <i class="fa fa-users"></i>
          <span class="playerinfo">
            {{status.currentPlayers}} / {{status.maxPlayers}}
          </span>
          <span class="caret"></span>
        </button>
      </h5>
      <div>{{host}}:{{port}}</div>
      <div class="add-info">
        {{>other_info}}
      </div>
    </div>
</div>
